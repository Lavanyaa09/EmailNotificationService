@{
    ViewData["Title"] = "Email Notification Service";
}

<div class="full-screen d-flex flex-column justify-content-center align-items-center">
    <h2 class="text-center text-primary fw-bold mb-4">📩 Email Notification Service</h2>

    <form method="post" asp-action="SendEmail" class="email-form w-100">
        <div class="mb-4">
            <label class="form-label fw-semibold fs-4">Subject</label>
            <input type="text" name="subject" class="form-control border-2 border-primary px-4 py-4"
                   placeholder="Enter email subject..." required />
        </div>

        <div class="mb-4">
            <label class="form-label fw-semibold fs-4">Message</label>
            <textarea name="body" class="form-control border-2 border-primary px-4 py-4"
                      rows="20" placeholder="Write your message here..." required></textarea>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-gradient px-5 py-3 rounded-pill shadow-sm">
                ✉️ Send Email
            </button>
        </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success text-center mt-4 fw-bold rounded-pill">
            @ViewBag.Message
        </div>
    }
</div>

<style>
    /* Full Page Styles */
    body {
        background-color: #ffdde1; /* Baby Pink */
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Full-Screen Form */
    .full-screen {
        width: 100vw;
        height: 100vh;
        padding: 40px;
    }

    .email-form {
        width: 100%;
        max-width: 1200px; /* Ensures readability on large screens */
    }

    /* Input Fields */
    .form-control {
        font-size: 1.5rem;
        border-radius: 15px;
        border: 2px solid #ff7eb3;
        background: rgba(255, 255, 255, 0.6);
        width: 100%;
    }

    /* Increased Subject Box Size */
    input[name="subject"] {
        height: 60px;
        font-size: 1.3rem;
    }

    /* Increased Message Box Size */
    textarea[name="body"] {
        height: 400px;
        font-size: 1.3rem;
    }

    .form-control:focus {
        box-shadow: 0px 4px 10px rgba(255, 120, 150, 0.4);
        border-color: #ff758c;
    }

    /* Gradient Button */
    .btn-gradient {
        background: linear-gradient(to right, #ff758c, #ff7eb3);
        color: white;
        font-weight: bold;
        font-size: 1.2rem;
        border: none;
        transition: 0.3s;
    }

        .btn-gradient:hover {
            background: linear-gradient(to right, #ff7eb3, #ff758c);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
        }

    
</style>
